<%= form_for(@user) do |f| %>
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :place_holder => "Add a New Name" %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :place_holder => "Add a New Email address" %>
  </div>
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username, :place_holder => "Add a New UserName" %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password, :place_holder => "Add a New Password" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>